String.Join(Environment.NewLine, Enumerable.Concat({String.Join("", DTReport.Columns.Cast(Of DataColumn).Select(Function(c, i) c.ColumnName.PadRight(DTReport.AsEnumerable().Select(Function(r) r(i).ToString().Length).DefaultIfEmpty(0).Max(Function(l) Math.Max(l, c.ColumnName.Length)) + 2)))}, DTReport.AsEnumerable().Select(Function(r) String.Join("", r.ItemArray.Select(Function(f, i) f.ToString().PadRight(DTReport.AsEnumerable().Select(Function(rr) rr(i).ToString().Length).DefaultIfEmpty(0).Max(Function(l) Math.Max(l, DTReport.Columns(i).ColumnName.Length)) + 2)))))))
