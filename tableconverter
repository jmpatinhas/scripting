New IO.StringWriter : DTReport.WriteXml(New IO.StringWriter(), XmlWriteMode.WriteSchema)
ReportText = String.Join(vbTab, DTReport.Columns.Cast(Of DataColumn).Select(Function(c) c.ColumnName).ToArray)
ReportText = ReportText & Environment.NewLine & String.Join(Environment.NewLine, (From r As DataRow In DTReport.Rows Select String.Join(vbTab, r.ItemArray)).ToArray)
